<UserControl x:Class="TourPlanner.Views.TourLogs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
        <!-- Tour Logs Header -->
        <TextBlock Text="Tour Logs" FontWeight="Bold" FontSize="16" Margin="3,5,5,5"/>

        <!-- Add Log Button -->
        <Button Content="Add Log" Command="{Binding AddLogCommand}" Margin="5" HorizontalAlignment="Right"/>

        <!-- Tour Logs Data Grid -->
        <DataGrid AutoGenerateColumns="False" CanUserAddRows="True" Margin="0,31,0,0" Grid.Row="1" ItemsSource="{Binding TourLogs}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Width="*" />
                <DataGridTextColumn Header="Comment" Width="*" />
                <DataGridTextColumn Header="Difficulty" Width="*" />
                <DataGridTextColumn Header="Duration" Width="*" />
                <DataGridTextColumn Header="Distance" Width="*" />
                <DataGridTextColumn Header="Rating" Width="*" />
                <!-- Additional columns as needed -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

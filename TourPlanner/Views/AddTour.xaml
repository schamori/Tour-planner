<UserControl x:Class="TourPlanner.Views.AddTour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">

            <TextBlock Text="Name" Margin="5"/>
            <TextBox x:Name="NameTextBox" Margin="5"/>

            <TextBlock Text="Tour Description" Margin="5"/>
            <TextBox x:Name="DescriptionTextBox" Margin="5" AcceptsReturn="True" Height="100"/>

            <TextBlock Text="From" Margin="5"/>
            <TextBox x:Name="FromTextBox" Margin="5"/>

            <TextBlock Text="To" Margin="5"/>
            <TextBox x:Name="ToTextBox" Margin="5"/>

            <TextBlock Text="Transport Type" Margin="5"/>
            <ComboBox x:Name="TransportTypeComboBox" Margin="5">
                <!-- Populate ComboBox with transport type options -->
                <ComboBoxItem>Car</ComboBoxItem>
                <ComboBoxItem>Bike</ComboBoxItem>
                <ComboBoxItem>Public Transport</ComboBoxItem>
                <ComboBoxItem>Walking</ComboBoxItem>
            </ComboBox>
            <Button Content="Submit" Command="{Binding FinishCreateTour}" Margin="5"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>


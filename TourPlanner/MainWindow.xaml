<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:TourPlanner.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}" 
        mc:Ignorable="d"
        Title="Tour Planner" Height="450" Width="800">
    <DockPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File" />
            <MenuItem Header="Edit" />
            <MenuItem Header="Options" />
            <MenuItem Header="Help" />
        </Menu>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="19.397"/>
                <ColumnDefinition Width="180.603"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar for Navigation -->
            <StackPanel Grid.Column="0" Margin="5,5,5,5" Grid.ColumnSpan="2">
                <!-- Tours Headline -->
                <TextBlock Text="Tours" FontWeight="Bold" FontSize="16" Margin="5"/>
                <ListBox Margin="5">
                    <ListBoxItem>Wienerwald</ListBoxItem>
                    <ListBoxItem>Dopplerhütte</ListBoxItem>
                    <ListBoxItem>FiglWarte</ListBoxItem>
                    <ListBoxItem>Dorfrunde</ListBoxItem>
                </ListBox>
                <!-- Tour Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                    <Button Command="{Binding GotToAddCommand}"  Content="Add" Margin="5"/>
                    <Button Content="Delete" Margin="5"/>
                    <Button Content="Modify" Margin="5"/>
                </StackPanel>
            </StackPanel>

            <!-- Map Display Area -->
            <Border Grid.Column="2" Margin="5,5,5,5" Background="#FFE5CC">
                <!-- Placeholder for Map, could be an Image or a Map Control -->
            </Border>

            <!-- Tour Logs Details Pane -->
            <Grid Grid.Column="3" Margin="5,5,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tour Logs Header -->
                <TextBlock Grid.Row="0" Text="Tour Logs" FontWeight="Bold" FontSize="16" Margin="5"/>

                <!-- Tour Logs Data Grid -->
                <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" />
                        <DataGridTextColumn Header="Duration" />
                        <DataGridTextColumn Header="Distance" />
                        <!-- Additional columns as needed -->
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>

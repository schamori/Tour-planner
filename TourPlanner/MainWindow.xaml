<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:TourPlanner.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}" 
        xmlns:local="clr-namespace:TourPlanner.Views"

        mc:Ignorable="d"
        Title="Tour Planner" Height="800" Width="800">
    <Grid>
        <!-- Menu Bar -->
        <local:Navbar x:Name="Navbar" />


        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="19.397"/>
                <ColumnDefinition Width="180.603"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar for Navigation -->
            <local:Tours Visibility="{Binding ToursVisibility}" x:Name="Tours" Grid.ColumnSpan="2" Margin="14,49,5,-49"/>

            <local:AddTour Visibility="{Binding AddTourVisibility}" x:Name="AddTour" Grid.ColumnSpan="2" Margin="14,49,5,-49"/>


            <!-- Map Display Area -->
            <local:Map x:Name="Map" Grid.Column="2"/>


            <!-- Tour Logs Details Pane -->
            <local:TourLogs x:Name="TourLogs" Grid.Column="3"/>

        </Grid>
    </Grid>
</Window>
